<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.petti.repository.free_board.FreeBoardRepository">
 	<sql id="criteria">
 		<trim prefix="(" suffix=") AND" prefixOverrides="OR">
 			<foreach collection="types" item="type">
 				<trim prefix="OR">
 					<choose>
	    				<when test="type=='T'.toString()">
	    					TITLE like '%'||#{keyword}||'%'
	    				</when>
	    				<when test="type=='C'.toString()">
	    					CONTENT like '%'||#{keyword}||'%'
	    				</when>
	    				<when test="type=='W'.toString()">
	    					WRITER like '%'||#{keyword}||'%'
	    				</when>
 					</choose>
 				</trim>
 			</foreach>
 		</trim>
 	</sql>
 
 	<sql id="category">
 		<if test='cno >0'>
	 		<trim prefix="(" suffix=") AND">
	 			cno = #{cno}
	 		</trim>
 		</if>
 	</sql>
 
	<select id="getList" resultType="freeVO">
	    	 <![CDATA[ 
	    	select * from 
			(select /*+ INDEX_DESC(tbl_FreeBoard pk_free_board) */  
	    		ROWNUM as rn, BNO, TITLE, CONTENT, WRITER, replyCnt, cno, regDate, updateDate 
	    		FROM tbl_freeBoard where
	    ]]>		
	    <include refid="criteria"/>
	    <include refid="category"/>
   	    <![CDATA[ 		
   		 rownum <= #{maxRow}) 
			where rn > #{minRow}
		]]>
	</select>

    <select id="getTotalCount" resultType="int">
    	select count(bno) from tbl_freeBoard where
	   	<include refid="criteria"/>
    	bno > 0
    </select>

	<insert id="insert">
		insert into tbl_freeBoard(bno,title,content,writer,cno)
    	values (seq_freeboard.nextval,#{title},#{content},#{writer},#{cno})
	</insert>

   	<insert id="insertSelectKey" keyColumn="bno" keyProperty="bno" useGeneratedKeys="true">
  	    insert into tbl_freeBoard(bno,title,content,writer,category)
    	values (seq_freeboard.nextval,#{title},#{content},#{writer},#{category})
    </insert>

	<select id="read" resultType="freeVO">
		select * from tbl_freeBoard where bno = #{bno}
	</select>
	
	<delete id="delete">
		delete from tbl_freeBoard where bno=#{bno}
	</delete>

	<update id="update">
		update tbl_freeBoard set
		title=#{title},
		content=#{content},
		cno=#{cno},
		updateDate = sysdate
		where bno=#{bno}
	</update>
	
	<update id="updatedReplyCnt">
		update tbl_freeBoard set replyCnt = replyCnt + #{amount} where bno = #{bno}
	</update>
	
	<select id="category" resultType="string">
		select * from tbl_category
	</select>
	
 </mapper>