<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.petti.repository.AnnoBoardRepository">
	<select id="getList" resultType="board">
	<![CDATA[ 
	  	select * from 
		(select /*+INDEX_DESC(tbl_announceBoard pk_board)*/  
	  		ROWNUM as rn, BNO, TITLE, CONTENT, WRITER, regDate, updateDate 
	  		FROM tbl_announceBoard where rownum <= #{pageNum}*#{amount}) 
		where rn > (#{pageNum}-1)*#{amount} order by bno desc
	]]>
	</select>

	<insert id="insert">
		insert into tbl_announceBoard(bno,title,content,writer)
    	values (seq_board.nextval,#{title},#{content},#{writer})
	</insert>

   	<insert id="insertSelectKey" keyColumn="bno" keyProperty="bno" useGeneratedKeys="true">
  	    insert into tbl_announceBoard(bno,title,content,writer)
    	values (seq_board.nextval,#{title},#{content},#{writer})
    </insert>

	<select id="read" resultType="board">
		select * from tbl_announceBoard where bno = #{bno}
	</select>
	
	<delete id="delete">
		delete from tbl_announceBoard where bno=#{bno}
	</delete>

	<update id="update">
		update tbl_announceBoard set
		title=#{title},
		content=#{content},
		updateDate = sysdate
		where bno=#{bno}
	</update>

<select id="getTotalCount" resultType="int">
    	select count(bno) from tbl_announceBoard
</select>


 </mapper>