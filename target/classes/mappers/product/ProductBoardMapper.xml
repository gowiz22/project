<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.petti.repository.product_board.ProductBoardRepository">
	<sql id="criteria">
 		<trim prefix="(" suffix=") AND" prefixOverrides="OR">
 			<foreach collection="types" item="type">
 				<trim prefix="OR">
 					<choose>
	    				<when test="type=='T'.toString()">
	    					p_name like '%'||#{keyword}||'%'
	    				</when>
	    				<when test="type=='C'.toString()">
	    					detail like '%'||#{keyword}||'%'
	    				</when>
	    				<when test="type=='W'.toString()">
	    					WRITER like '%'||#{keyword}||'%'
	    				</when>	  					
 					</choose>
 				</trim>
 			</foreach>
 		</trim>
 	</sql>
 
	<select id="getList" resultType="productVO">
	    <![CDATA[ 
	    	select * from 
			(select /*+ INDEX_DESC(tbl_product pk_product) */  
	    		ROWNUM as rn, PNO, p_name, detail, WRITER, regDate, updateDate , recommendation
	    		FROM tbl_product where
	    ]]>		
	    <include refid="criteria"/>
   	    <![CDATA[ 		
   		 rownum <= #{maxRow}) 
			where rn > #{minRow}
		]]>
    </select>
    
    <select id="getTotalCount" resultType="int">
    	select count(pno) from tbl_product where
    	<include refid="criteria"/>
    	pno > 0
    </select>

	<insert id="insert">
		insert into tbl_product(pno,p_name,detail,writer)
    	values (seq_product.nextval,#{p_name},#{detail},#{writer})
	</insert>

   	<insert id="insertSelectKey" keyColumn="pno" keyProperty="pno" useGeneratedKeys="true">
		insert into tbl_product(pno,p_name,detail,writer)
    	values (seq_product.nextval,#{p_name},#{detail},#{writer})
    </insert>

	<select id="read" resultType="productVO">
		select * from tbl_product where pno = #{pno}
	</select>
	
	<delete id="delete">
		delete from tbl_product where pno=#{pno}
	</delete>

	<update id="update">
		update tbl_product set
			p_name=#{p_name},
			detail=#{detail},
			updateDate = sysdate
		where pno=#{pno}
	</update>
	
	<update id="updateScoreRate">
		update tbl_product set
			recommendation = #{rate}
		where pno=#{pno}
	</update>
	
 </mapper>